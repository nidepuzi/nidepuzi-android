<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.danlai.library.widget.titleview.BaseTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="编辑地址"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="收件人姓名"
                    android:maxLength="20"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14dp"/>

            </LinearLayout>

            <include layout="@layout/preference_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14dp"/>

            </LinearLayout>

            <include layout="@layout/preference_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/id_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="身份证:   (可选填，购买保税商品必填)"
                    android:maxLength="18"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14dp"/>

            </LinearLayout>

            <include layout="@layout/preference_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="省  市  区(县)"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_address_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入省份"
                        android:maxLength="12"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14dp"/>

                    <EditText
                        android:id="@+id/et_address_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入市"
                        android:maxLength="12"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14dp"/>

                    <EditText
                        android:id="@+id/et_address_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="输入区县"
                        android:maxLength="12"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14dp"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/preference_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <EditText
                    android:id="@+id/clear_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="详细地址"
                    android:maxLength="40"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14dp"/>

            </LinearLayout>

            <include
                android:id="@+id/id_line"
                layout="@layout/preference_line"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/id_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_id_before"
                        android:layout_width="77dp"
                        android:layout_height="48dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_id_before"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="身份证正面照"
                        android:textColor="@color/color_66"
                        android:textSize="14dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_id_after"
                        android:layout_width="77dp"
                        android:layout_height="48dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_id_after"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="身份证反面照"
                        android:textColor="@color/color_66"
                        android:textSize="14dp"/>

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/common_interval"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设为默认地址"
                    android:textSize="14dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:shadowColor="@color/colorAccent"/>

            </LinearLayout>

            <include layout="@layout/common_interval"/>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="删除"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_grey">

                <Button
                    android:id="@+id/save"
                    style="@style/CommonButton"
                    android:layout_marginTop="24dp"
                    android:text="修改地址"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>