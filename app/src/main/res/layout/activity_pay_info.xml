<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.danlai.library.widget.titleview.BaseTitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="确认订单"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_view"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/level_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coupon_red"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:text="温馨提示：保税区和直邮发货根据海关要求需要提供身份证信息，收件人和身份证需要保持一致，为了避免清关失败，提供的身份证必须和收货人一致。"
                    android:textColor="@color/white"
                    android:textSize="12dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_DD"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/bg_grey"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/address_layout"
                            android:layout_width="match_parent"
                            android:layout_height="145px"
                            android:background="@color/white"
                            android:clickable="true"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/image_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_address"/>

                            <ImageView
                                android:id="@+id/image_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_to_right"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_toLeftOf="@id/image_right"
                                android:layout_toRightOf="@id/image_location"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/color_33"
                                        android:textSize="14dp"/>

                                    <TextView
                                        android:id="@+id/tv_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/color_33"
                                        android:textSize="14dp"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:textColor="@color/color_99"
                                    android:textSize="13dp"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/choose_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/image_location"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@id/image_location"
                                android:text="填写收货地址"
                                android:visibility="invisible"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/layout_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <include layout="@layout/common_gap"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="12dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/et_id"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:gravity="center_vertical"
                                    android:hint="请输入身份证号"
                                    android:maxLength="18"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:textSize="14dp"
                                    android:visibility="gone"/>

                                <TextView
                                    android:id="@+id/tv_id"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:textSize="14dp"
                                    android:visibility="visible"/>

                                <TextView
                                    android:id="@+id/btn_id"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorAccent"
                                    android:gravity="center"
                                    android:text="修改"
                                    android:textColor="@color/white"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_id_img"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image_id_face"
                                    android:layout_width="77dp"
                                    android:layout_height="48dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/icon_id_before"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="身份证正面照"
                                    android:textColor="@color/color_33"
                                    android:textSize="14dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/image_id_back"
                                    android:layout_width="77dp"
                                    android:layout_height="48dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/icon_id_after"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="身份证反面照"
                                    android:textColor="@color/color_33"
                                    android:textSize="14dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp"/>

                        <RelativeLayout
                            android:id="@+id/logistic_layout"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/white"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="物流配送"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/tv_logistic_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8dp"
                                android:layout_toLeftOf="@+id/iv_logistic"
                                android:textSize="14dp"/>

                            <ImageView
                                android:id="@+id/iv_logistic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_to_right"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <include layout="@layout/common_gap"/>

                    <com.danlai.library.widget.NestedListView
                        android:id="@+id/lv_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <include layout="@layout/common_gap"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>

                    <RelativeLayout
                        android:id="@+id/coupon_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="优惠券"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tv_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:layout_toLeftOf="@+id/iv_coupon_right"
                            android:textColor="@color/color_99"
                            android:textSize="14dp"/>

                        <ImageView
                            android:id="@+id/iv_coupon_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_to_right"/>

                    </RelativeLayout>

                    <include layout="@layout/common_gap"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的钱包"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <CheckBox
                            android:id="@+id/cb_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <include layout="@layout/common_gap"/>

                    <LinearLayout
                        android:id="@+id/coin_layout"
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="铺子币"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <CheckBox
                            android:id="@+id/cb_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <include
                        android:id="@+id/coin_line"
                        layout="@layout/common_gap"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="APP支付优惠"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tv_app_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="-¥0"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>
                    </RelativeLayout>

                    <include layout="@layout/common_gap"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>

                    <include layout="@layout/common_gap"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我已阅读并同意"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tv_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你的铺子购买条款"
                            android:textColor="@color/colorAccent"
                            android:textSize="14dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <CheckBox
                            android:id="@+id/cb_rule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>

                    </LinearLayout>

                    <include layout="@layout/common_gap"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="商品金额"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorAccent"
                            android:textSize="14dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="运费"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tv_post"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/color_33"
                            android:textSize="14dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"/>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应付款金额"
                        android:textColor="@color/color_22"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="已节省"
                        android:textColor="#26262e"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/save_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/confirm"
                    style="@style/CommonButton"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:text="去结算"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>