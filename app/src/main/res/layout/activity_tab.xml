<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include layout="@layout/common_gap"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_main"
                    style="@style/TabRadioButtonStyle"
                    android:drawableTop="@drawable/tab_main"
                    android:text="选品"/>

                <RadioButton
                    android:id="@+id/rb_share"
                    style="@style/TabRadioButtonStyle"
                    android:drawableTop="@drawable/tab_share"
                    android:text="分享"/>

                <RadioButton
                    android:id="@+id/rb_shop"
                    style="@style/TabRadioButtonStyle"
                    android:drawableTop="@drawable/tab_shop"
                    android:text="店铺"/>

                <RadioButton
                    android:id="@+id/rb_service"
                    style="@style/TabRadioButtonStyle"
                    android:drawableTop="@drawable/tab_service"
                    android:text="客服"/>

            </RadioGroup>
        </FrameLayout>
    </LinearLayout>
</layout>
