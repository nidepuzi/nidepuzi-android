<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.danlai.library.widget.titleview.BaseTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="手机绑定"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.danlai.library.widget.CircleImageView
                android:id="@+id/head_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/img_user_head"/>

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/color_33"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="为了保证返佣及时到账，请完整填写信息哦~！"
                android:textColor="@color/color_99"
                android:textSize="14sp"/>

            <com.danlai.library.widget.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_common_black"
                android:gravity="center_vertical"
                android:hint="请输入掌柜姓名(2-20个中英文组成)"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/color_33"
                android:textColorHint="@color/color_99"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"
                app:iconClear="@drawable/clear_text"/>

            <com.danlai.library.widget.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_common_black"
                android:gravity="center_vertical"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/color_33"
                android:textColorHint="@color/color_99"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"
                app:iconClear="@drawable/clear_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_common_black"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/color_33"
                    android:textColorHint="@color/color_99"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/color_33"/>

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/color_33"
                    android:textSize="13sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/next"
                style="@style/CommonButton"
                android:layout_marginTop="30dp"
                android:text="确认提交"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/service_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录代表您已阅读并同意"
                    android:textColor="@color/color_99"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《你的铺子微店用户服务协议》"
                    android:textColor="@color/color_33"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容"
                    android:textColor="@color/color_99"
                    android:textSize="10sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>